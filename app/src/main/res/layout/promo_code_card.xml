<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="343dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_box">
    <ImageView
        android:id="@+id/img_promo_id"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:src="@drawable/img_promo"
        android:scaleType="fitXY"
        android:clipToOutline="true"
        android:background="@drawable/custom_img_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/value_promo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:text="10"
        android:textColor="@color/white_color"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@id/img_promo_id"
        app:layout_constraintLeft_toLeftOf="@id/img_promo_id"
        app:layout_constraintTop_toTopOf="@id/img_promo_id"
        app:layout_constraintVertical_bias="0.518" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="%"
        android:textColor="@color/white_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/img_promo_id"
        app:layout_constraintLeft_toRightOf="@id/value_promo_id"
        app:layout_constraintTop_toTopOf="@id/img_promo_id"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="off"
        android:textColor="@color/white_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/img_promo_id"
        app:layout_constraintLeft_toRightOf="@id/value_promo_id"
        app:layout_constraintTop_toTopOf="@id/img_promo_id"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eshop-promo"
        android:textColor="@color/black_color"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toRightOf="@id/img_promo_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="opening-promo"
        android:textColor="@color/gray_color"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_promo_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="224dp"
        android:text="6 days remaining"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:background="@drawable/custom_button_primary"
        android:text="Apply"
        android:textSize="12sp"
        android:textColor="@drawable/text_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>